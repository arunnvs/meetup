{% extends '@Twig/base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-auto">
                    {{ form_widget(form.search) }}
                </div>

            </div>
        {{ form_end(form) }}

        {% if list is not empty %}
            <h2 class="mb-4 mt-4">List</h2>
            <table class="table ml-n2 mt-4">
                <thead>
                    <tr>
                        <th scope="col">User ID</th>
                        <th scope="col">Title</th>
                    </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ list.userId }}</td>
                    <td>{{ list.title }}</td>
                </tr>
                </tbody>
            </table>
        {% elseif isFromSubmitted %}
            <p class="mt-3">No list found!!</p>
        {% endif %}
    </div>
{% endblock %}
